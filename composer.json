{
    "name": "pragmarx/steroids",

    "description": "Laravel 4 Blade on Steroids",

    "keywords": ["laravel", "blade", "template", "view"],

    "license": "BSD-3-Clause",

    "authors": [
        {
            "name": "Antonio Carlos Ribeiro",
            "email": "acr@antoniocarlosribeiro.com",
            "role": "Creator"
        }
    ],

    "require": {
        "php": ">=5.3.7",
        "illuminate/support": ">=4.1",
        "illuminate/filesystem": ">=4.1",
        "pragmarx/support": "~0.6"
    },

    "require-dev": {
        "mockery/mockery": "0.8.0",
        "satooshi/php-coveralls": "dev-master",
        "phpunit/phpunit": "3.7.*"
    },

    "autoload": {
        "psr-4": {
            "PragmaRX\\Steroids\\": "src/"
        }
    },

    "extra": {
            "component": "package",
            "branch-alias": {
                    "dev-master": "0.7-dev"
            }
    },

    "minimum-stability": "dev"
}
